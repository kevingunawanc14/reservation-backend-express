// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                            Int     @id @default(autoincrement())
  username                      String  @unique
  password                      String 
  phoneNumber                   String
  email                         String? @default("abc@gmail.com")  
  roles                         Json?
  healthPoint                   Int? @default(100)
  experiencePoint               Int? @default(100)
  rank                          String? @default("Gold")
  activeTheme                   String? @default("Light")
  activeAvatar                  String? @default("gi GiMuscleFat")
  krakatauCoin                  Int? @default(0)
  totalJamTantanganMingguan     String? @default("0")
  totalJamTantanganBulanan      String? @default("0")
  totalJamTantangan6Bulan       String? @default("0")
  statusDailyReward             Boolean? @default(false)
}

model Schedule {
  id                            Int       @id @default(autoincrement())
  idProduct                     Int?
  username                      String?
  price                         String?
  hour                          String?
  date                          String?
  paymentStatus                 String?
  paymentMethod                 String?
  createdAt                     DateTime?  @default(now())
  updatedAt                     DateTime?  @updatedAt
}

model HistoryPayment{
    id                            Int       @id @default(autoincrement())
    username                      String?
    idProduct                     Int?
    totalPrice                    String?
    detailOrder                   String?
    createdAt                     DateTime?  @default(now())
}

model Product{
  id   Int      @id @default(autoincrement())
  name String? 
  gor Int?
  price String?
  imagePath String? 
}


model Rating{
  id      Int      @id @default(autoincrement())
  score   Int
}

model Membership{
  id      Int      @id @default(autoincrement())
  type String?

}

model Avatar{
  id      Int      @id @default(autoincrement())

}

model Challenge{
  id   Int      @id @default(autoincrement())
  description String 
  repeatTime String
}

model Journal{
  id      Int      @id @default(autoincrement())
  healthPoint Int  
  idUser Int
  createdAt  DateTime   @default(now())

}