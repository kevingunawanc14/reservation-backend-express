// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product{
  id   Int      @id @default(autoincrement())
  name String? 
  nameDetail String?
  gor Int?
  price String?
  imagePath String? 
  priceInt Int?
}

model Challenge{
  id   Int      @id @default(autoincrement())
  description String 
  repeatTime String
}

model User {
  id                            Int     @id @default(autoincrement())
  username                      String  @unique
  password                      String 
  phoneNumber                   String
  email                         String? @default("abc@gmail.com")  
  roles                         Json?
  healthPoint                   Int? @default(100)
  experiencePoint               Int? @default(100)
  attackPoint                   Int? @default(0)
  defensePoint                  Int? @default(0)
  rank                          String? @default("Gold")
  activeTheme                   String? @default("Light")
  activeAvatar                  String? @default("GiMuscleFat")
  krakatauCoin                  Int? @default(0)
  statusWeeklyChallange         Boolean? @default(false)
  statusMonthlyChallange        Boolean? @default(false)
  status6MonthChallange         Boolean? @default(false)
  statusDailyReward             Boolean? @default(false)
  biayaPendaftaran              Boolean? @default(false)
}

model Schedule {
  id                            Int       @id @default(autoincrement())
  idProduct                     Int?
  username                      String?
  price                         String?
  hour                          String?
  date                          String?
  paymentStatus                 String?
  paymentMethod                 String?
  connectHistory                String?
  createdAt                     DateTime?  @default(now())
  updatedAt                     DateTime?  @updatedAt
}

model HistoryPayment {
    id                            Int       @id @default(autoincrement())
    username                      String?
    idProduct                     Int?
    date                          String?
    totalPrice                    String?
    paymentMethod                 String?
    paymentStatus                 String?
    detailDate                    String?
    detailOrder                   String?
    typeBreath                    String?
    minuteBreath                  String?
    totalXp                       String?
    totalHp                       String?
    totalAttack                   String?
    totalDefense                  String?
    connectHistory                String?
    createdAt                     DateTime?  @default(now())
}

model HistoryAvatar {
    id                            Int       @id @default(autoincrement())
    username                      String?
    avatar                        String? 
    createdAt                     DateTime?  @default(now())
}

model HistoryTheme{
    id                            Int       @id @default(autoincrement())
    username                      String?
    theme                         String?
    createdAt                     DateTime?  @default(now())
}

model HistoryReward {
    id                            Int       @id @default(autoincrement())
    username                      String?
    reward                        String? 
    createdAt                     DateTime?  @default(now())
}

model Rating{
  id      Int      @id @default(autoincrement())
  idProduct Int
  username  String
  rating    Int
  description String
  idPayment Int
}


