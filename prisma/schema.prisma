// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  username String  @unique
  password String 
  phoneNumber    String
  email   String? @default("abc@gmail.com")  
  roles Json?
  healthPoint Int? @default(0)
  rank String? @default("Platinum")
  theme String? @default("Light")
  statusPendaftaran String? @default("0")
  refreshToken String?
}

model Order {
  id          Int       @id @default(autoincrement())
  username    String?
  productId   Int?
  totalPrice  Float?
  createdAt   DateTime?  @default(now())
  updatedAt   DateTime?  @updatedAt
  paymentStatus String?
  paymentMethod String?
}

model Product{
  id   Int      @id @default(autoincrement())
  name String? 
  gor Int?
  price String?
}


model Rating{
  id      Int      @id @default(autoincrement())
  score   Int
}

model Membership{
  id      Int      @id @default(autoincrement())
  type? String

}

model Avatar{
  id      Int      @id @default(autoincrement())

}

model Challenge{
  id   Int      @id @default(autoincrement())
  description String 
  repeatTime String
}

model Journal{
  id      Int      @id @default(autoincrement())
  healthPoint Int  
  idUser Int
  createdAt  DateTime   @default(now())

}